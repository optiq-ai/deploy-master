{{!-- Szablon dla logów projektu --}}
<div class="card">
  <div class="card-header">
    <h5>Logi projektu: {{name}}</h5>
  </div>
  <div class="card-body">
    <div class="mb-3">
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-outline-secondary" onclick="refreshLogs('{{id}}')">Odśwież</button>
        <button type="button" class="btn btn-outline-secondary" onclick="downloadLogs('{{id}}')">Pobierz logi</button>
      </div>
    </div>
    
    <div class="log-container bg-dark text-light p-3 rounded" style="height: 500px; overflow-y: auto; font-family: monospace;">
      <pre>{{logs}}</pre>
    </div>
    
    <div class="mt-3">
      <button class="btn btn-primary" onclick="backToStatus('{{id}}')">Powrót do statusu</button>
    </div>
  </div>
</div>
